<%- include("partials/header.ejs") %>
<section>
    <div class="container">
        <div class="row">
            <div style="display: flex;">
                <h1>View Blogs</h1>
                <div class="mx-4 mb-3 mt-2" style="display: flex;">
                    <a href="/compose">
                    <button class="btn btn-success" type="button">+</button>
                    </a>
                </div>
            </div>
            <% if(locals.title){%>
                 <div>
                    <ul> <% for(var i=0; i<title.length; i++){ %>
                       <li>
                           <h3><%= title[i] %></h3>
                           <p><%= content[i] %></p>
                           <div class="d-grid gap-2 d-md-block">
                            <button class="btn btn-primary" type="button">Edit</button>
                            <button class="btn btn-primary" type="button">Delete</button>
                          </div>
                       </li>
                       <% } %>
                    </ul>
                 </div>
                 <% }else{ %>
                <div class="flex">
                    <img src="images/empty.png" alt="">
                </div>
                <h3>No blogs created. <a href="/compose">Create now</a></h3>
                <% } %>
        </div>
    </div>
</section>
